<Window x:Class="WMRApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:local="clr-namespace:WMRApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200" WindowStartupLocation="CenterScreen" Activated="Window_Activated" Background="#eed">
  <Grid Margin="5">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="3*"/>
      <ColumnDefinition Width="5*"/>
      <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>
    <Grid Grid.Column="1" HorizontalAlignment="Left" Height="630" Margin="10,13,0,0" VerticalAlignment="Top" Width="522">
      <Grid.RowDefinitions>
        <RowDefinition Height="8*"/>
        <RowDefinition Height="1*"/>
      </Grid.RowDefinitions>
      <Border BorderBrush="#299" BorderThickness="5">
        <m:Map Grid.Row="0" Name="MyMap" 
               CredentialsProvider="AhOYVsCHeLfCM2LttVNiVAK6mUGtJmjRlevk_2qjuzV9J-gNrsj6z6MD5XREJN1h" 
               ZoomLevel="11" Center="45.501689,-73.567256" 
               MouseDoubleClick="MyMap_MouseDoubleClick"
              
             
               >
        </m:Map>
      </Border>

      <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10 0">
        <TextBox Name="tbLocation" IsReadOnly="True" Width="400" Padding="15" VerticalAlignment="Center" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" />
        <Button Name="btnAddStop" Content="Add" Width="70" Margin="10" Padding="10" VerticalAlignment="Center" Click="btnAddStop_Click" />
      </StackPanel>
    </Grid>
    <Grid HorizontalAlignment="Left" Height="630" Margin="10 10 0 0" VerticalAlignment="Top" Width="290">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="6*"/>
        <RowDefinition Height="2*"/>
        <RowDefinition Height="7*"/>
      </Grid.RowDefinitions>
      <Label Grid.Row="0" Background="#ffc" Foreground="#484" FontSize="18" Padding="5" BorderThickness="2" BorderBrush="#299" Margin="0 0 0 2" Name="lblCurrentUser" />
      <ListView Name="lvUsers" Grid.Row="1">
        <ListView.View>
          <GridView>
            <GridViewColumn Header="No." Width="40" DisplayMemberBinding="{Binding Id}"/>
            <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}"/>
            <GridViewColumn Header="User name" Width="120" DisplayMemberBinding="{Binding UserName}"/>
          </GridView>
        </ListView.View>
      </ListView>
      <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10">
        <TextBox Name="tbChat" Width="220" TextWrapping="Wrap"/>
        <Button Name="btnChat" Click="btnChat_Click" IsDefault="True" Width="50" Margin="20 10" Content="Send"/>
      </StackPanel>
      <ListBox Name="lbChats" Grid.Row="3" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <Grid>
              <TextBlock Text="{Binding}" TextWrapping="Wrap" />
            </Grid>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Grid>
    <Grid Grid.Column="2" HorizontalAlignment="Left" Height="630" Margin="20,10,10,0" VerticalAlignment="Top" Width="290">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="64*"/>
        <ColumnDefinition Width="227*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="50*"/>
        <RowDefinition Height="50*"/>
        <RowDefinition Height="50*"/>
        <RowDefinition Height="108*"/>
        <RowDefinition Height="284*"/>
        <RowDefinition Height="77*"/>
      </Grid.RowDefinitions>
      <ListBox Name="lbStops" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,107.5,0,0" Grid.RowSpan="2">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <Grid>
              <TextBlock Text="{Binding}" />
            </Grid>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
      <Button Grid.Row="5" Content="Clear All" Padding="15 5" HorizontalAlignment="Right" Margin="0,20,50,20" Name="btnClear" Click="btnClear_Click" Width="76" Grid.Column="1" />
      <Button Grid.Row="5" Content="Exit" Padding="15 5" HorizontalAlignment="Left" Margin="50,20,0,20" Name="btnExit" Click="btnExit_Click" Width="51" Grid.ColumnSpan="2" />
      <Label Content="Location" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      <Label Content="Date" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center"/>
      <Label Content="Time" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
      <TextBox Grid.Column="1" HorizontalAlignment="Center" Height="30"  TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="200"/>
      <DatePicker Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="200"/>
      <ComboBox Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="200"/>
      <Button Grid.ColumnSpan="2" Content="Add New Location" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.Row="3" VerticalAlignment="Top" Width="100"/>
    </Grid>
  </Grid>
</Window>
